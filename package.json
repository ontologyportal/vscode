{
  "name": "suo-kif",
  "displayName": "SUO-KIF Support",
  "icon": "extension-icon.png",
  "description": "Full-featured SUO-KIF/SUMO and TPTP development environment for VSCode",
  "version": "2.0.0",
  "publisher": "ontologyportal",
  "repository": {
    "type": "git",
    "url": "https://github.com/ontologyportal/vscode"
  },
  "license": "MIT",
  "scripts": {
    "test": "mocha test/**/*.test.js",
    "test:watch": "mocha --watch test/**/*.test.js",
    "lint": "node --check extension.js && node --check src/**/*.js"
  },
  "devDependencies": {
    "mocha": "^10.2.0"
  },
  "engines": {
    "vscode": "^1.70.0"
  },
  "categories": [
    "Programming Languages",
    "Formatters",
    "Linters"
  ],
  "main": "./extension.js",
  "activationEvents": [
    "onLanguage:suo-kif",
    "onLanguage:tptp"
  ],
  "contributes": {
    "commands": [
      {
        "command": "suo-kif.searchSymbol",
        "title": "SUO-KIF: Search Symbol in Workspace"
      },
      {
        "command": "suo-kif.showTaxonomy",
        "title": "SUO-KIF: Show Class Taxonomy"
      },
      {
        "command": "suo-kif.formatAxiom",
        "title": "SUO-KIF: Format Axiom"
      },
      {
        "command": "suo-kif.goToDefinition",
        "title": "SUO-KIF: Go to Definition"
      },
      {
        "command": "suo-kif.browseInSigma",
        "title": "SUO-KIF: Browse Term in Sigma"
      },
      {
        "command": "suo-kif.checkErrors",
        "title": "SUO-KIF: Check for Errors"
      },
      {
        "command": "suo-kif.queryProver",
        "title": "SUO-KIF: Query with Theorem Prover"
      },
      {
        "command": "suo-kif.runProverOnScope",
        "title": "SUO-KIF: Run Prover on..."
      },
      {
        "command": "suo-kif.generateTPTP",
        "title": "SUO-KIF: Generate TPTP File"
      }
    ],
    "keybindings": [
      {
        "command": "suo-kif.formatAxiom",
        "key": "ctrl+shift+f",
        "mac": "cmd+shift+f",
        "when": "editorLangId == suo-kif && editorHasSelection"
      },
      {
        "command": "suo-kif.goToDefinition",
        "key": "f12",
        "mac": "f12",
        "when": "editorLangId == suo-kif"
      },
      {
        "command": "suo-kif.browseInSigma",
        "key": "ctrl+shift+b",
        "mac": "cmd+shift+b",
        "when": "editorLangId == suo-kif"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "suo-kif.searchSymbol",
          "when": "editorLangId == suo-kif",
          "group": "navigation@1"
        },
        {
          "command": "suo-kif.goToDefinition",
          "when": "editorLangId == suo-kif",
          "group": "navigation@2"
        },
        {
          "command": "suo-kif.showTaxonomy",
          "when": "editorLangId == suo-kif",
          "group": "navigation@3"
        },
        {
          "command": "suo-kif.browseInSigma",
          "when": "editorLangId == suo-kif",
          "group": "navigation@4"
        },
        {
          "command": "suo-kif.formatAxiom",
          "when": "editorLangId == suo-kif && editorHasSelection",
          "group": "1_modification@1"
        },
        {
          "command": "suo-kif.checkErrors",
          "when": "editorLangId == suo-kif",
          "group": "1_modification@2"
        },
        {
          "command": "suo-kif.queryProver",
          "when": "editorLangId == suo-kif && editorHasSelection",
          "group": "1_modification@3"
        },
        {
          "command": "suo-kif.runProverOnScope",
          "when": "editorLangId == suo-kif",
          "group": "1_modification@4"
        },
        {
          "command": "suo-kif.generateTPTP",
          "when": "editorLangId == suo-kif",
          "group": "1_modification@5"
        }
      ]
    },
    "configuration": {
      "title": "SUO-KIF",
      "properties": {
        "suo-kif.language": {
          "type": "string",
          "default": "EnglishLanguage",
          "description": "The language to use for documentation strings (e.g. EnglishLanguage)."
        },
        "suo-kif.sigmaUrl": {
          "type": "string",
          "default": "http://sigma.ontologyportal.org:8080/sigma/Browse.jsp",
          "description": "URL of the Sigma KB browser."
        },
        "suo-kif.knowledgeBase": {
          "type": "string",
          "default": "SUMO",
          "description": "Knowledge base to use in Sigma browser (e.g., SUMO)."
        },
        "suo-kif.proverPath": {
          "type": "string",
          "default": "",
          "description": "Path to theorem prover executable (Vampire or E-Prover)."
        },
        "suo-kif.proverType": {
          "type": "string",
          "enum": ["vampire", "eprover"],
          "default": "vampire",
          "description": "Type of theorem prover to use."
        },
        "suo-kif.proverTimeout": {
          "type": "number",
          "default": 30,
          "description": "Timeout in seconds for theorem prover queries."
        },
        "suo-kif.sigmaPath": {
          "type": "string",
          "default": "",
          "description": "Path to SigmaKEE installation or source directory."
        },
        "suo-kif.sigmaRuntime": {
          "type": "string",
          "enum": ["local", "docker", "native (experimental)"],
          "default": "local",
          "description": "How to run Sigma. If set to local, use a local installation, if set to docker, use a running docker instance, if set to native, use the experimental JS implementation of Sigma (not recommended)"
        },
        "suo-kif.dockerImage": {
          "type": "string",
          "default": "adampease/sigmakee",
          "description": "Docker image to use if suo-kif.sigmaRuntime is set to 'docker'."
        },
        "suo-kif.externalKBPath": {
          "type": "string",
          "default": "",
          "description": "Path to an external knowledge base directory (e.g. SUMO) to integrate with."
        },
        "suo-kif.configXmlPath": {
          "type": "string",
          "default": "",
          "description": "Path to Sigma's config.xml file. If not set, the extension will search common locations."
        },
        "suo-kif.tptpLang": {
          "type": "string",
          "enum": ["fof", "tff", "thf"],
          "default": "fof",
          "description": "TPTP output format: fof (first-order), tff (typed first-order), or thf (typed higher-order)."
        },
        "suo-kif.enforceKBContext": {
          "type": "boolean",
          "default": true,
          "description": "When enabled, KB-level operations (workspace conversion, KB export) require working within a configured KB directory. Disable for advanced users who want unrestricted access."
        },
        "suo-kif.formatIndentSize": {
          "type": "number",
          "default": 2,
          "description": "Number of spaces for each indentation level when formatting."
        }
      }
    },
    "languages": [
      {
        "id": "suo-kif",
        "aliases": [
          "SUO-KIF",
          "KIF"
        ],
        "icon": {
            "light": "./kif-file-icon.png",
            "dark": "./kif-file-icon.png"
        },
        "extensions": [
          ".kif"
        ],
        "configuration": "./language-configuration.json"
      },
      {
        "id": "tptp",
        "aliases": [
          "TPTP",
          "TPTP Problem"
        ],
        "icon": {
          "light": "./tptp-file-icon.png",
          "dark": "./tptp-file-icon.png"
        },
        "extensions": [
          ".p",
          ".tptp",
          ".ax"
        ],
        "configuration": "./tptp-language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "suo-kif",
        "scopeName": "source.suo-kif",
        "path": "./syntaxes/suo-kif.tmLanguage.json"
      },
      {
        "language": "tptp",
        "scopeName": "source.tptp",
        "path": "./syntaxes/tptp.tmLanguage.json"
      }
    ]
  }
}
