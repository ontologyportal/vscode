{
    "comments": {
        "lineComment": "%",
        "blockComment": ["/*", "*/"]
    },
    "brackets": [
        ["(", ")"],
        ["[", "]"]
    ],
    "autoClosingPairs": [
        { "open": "(", "close": ")" },
        { "open": "[", "close": "]" },
        { "open": "'", "close": "'", "notIn": ["string", "comment"] },
        { "open": "\"", "close": "\"", "notIn": ["string", "comment"] }
    ],
    "surroundingPairs": [
        { "open": "(", "close": ")" },
        { "open": "[", "close": "]" },
        { "open": "'", "close": "'" },
        { "open": "\"", "close": "\"" }
    ],
    "folding": {
        "markers": {
            "start": "^\\s*(thf|tff|tcf|fof|cnf|tpi)\\s*\\(",
            "end": "\\)\\.\\s*$"
        }
    },
    "wordPattern": "(-?\\d*\\.\\d\\w*)|([^\\`\\~\\!\\@\\#\\%\\^\\&\\*\\(\\)\\-\\=\\+\\[\\{\\]\\}\\\\\\|\\;\\:\\'\\\"\\,\\.\\<\\>\\/\\?\\s]+)"
}
